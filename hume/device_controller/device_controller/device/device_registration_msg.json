{
  "name": "Greenhouse",
  // UUID to be able to differentiate between different devices, needed as unique
  // key
  "id": "UUID",
  // Class shows which type of messages this is, COMPOUND means it has more than
  // one capability and has sub-devices.
  "class": "COMPOUND",
  // Spec can be used to specify exactly which type of messages this is. If HINT
  // can recognize the spec, then HINT can also show appropirate icons. If no
  // spec is given, then HINT falls back on the class of the messages.
  "spec": "GREENHOUSE",
  "devices": [
    {
      "name": "Lamp",
      // Every top-level device is identifiable by its IP (?) address, but a
      // sub-device needs to be discoverable when the top device receives a
      // command, so an ID is necessary. Same goes for actions. When invoking
      // an action example: sub-device = 2, action = 2, state = On
      "id": 1,
      // Actuator class
      "class": "ACTUATOR",
      "spec": "LAMP",
      "actions": [
        {
          "name": "Lamp Control",
          "id": 1,
          // Stateful actuators are always in one state or the other
          "type": "STATEFUL",
          // states is a mandatory field for stateful actions, it lists all
          // possible states
          "states": [
            "On",
            "Off"
          ]
        }
      ]
    },
    {
      "name": "Water Pump",
      "id": 2,
      // Actuator class
      "class": "ACTUATOR",
      "spec": "PUMP",
      "actions": [
        {
          // This seemed like a clever way of controlling tide in an easy way
          "name": "Water Level",
          "id": 1,
          "type": "STATEFUL",
          "states": [
            "High",
            "Low"
          ]
        },
        {
          // Also providing direct control of pump to allow for circulation of
          // water.
          "name": "Pump Control",
          "id": 2,
          "type": "STATEFUL",
          "states": [
            "On",
            "Off"
          ]
        }
      ]
    },
    {
      // Sensor class messages
      "name": "Thermometer",
      "id": 3,
      "class": "SENSOR",
      "spec": "THERMOMETER",
      "actions": [
        {
          // Sensor class devices typically provide a READ action to get the
          // sensor's current value, but it could also be a purely event-based
          // messages. Must specify return_type
          "name": "Temperature",
          "id": 1,
          "type": "READ",
          "return_type": "float"
        },
        {
          "name": "Temperature Warning",
          "id": 2,
          "type": "EVENT",
          // Can send a float to the device to set level to warn on, a float
          // will be given on events.
          "data_type": "float"
        }
      ]
    },
    {
      // Sensor class messages
      "name": "Water Sensor",
      "id": 4,
      "class": "SENSOR",
      "spec": "WATER_LEVEL",
      "actions": [
        {
          "name": "Water Level",
          "type": "READ",
          "return_type": "float",
          "max_return_value": 100.0
        },
        {
          "name": "Water Level Warning",
          "type": "EVENT",
          // Can send a float to the messages to set level to warn on, a float
          // will be given on events.
          "data_type": "float"
        }
      ]
    }
  ]
}
